###################################
############## HTTPS ##############
###################################

server {
  <% if !@gzip %>
  gzip off;
  gzip_disable "msie6";
  <% end %>
  listen          0.0.0.0:80;
  server_name     <%=@site%>;
  access_log /var/log/nginx/<%=@site%>-access.log;
	access_log off;
  error_log /var/log/nginx/<%=@site%>-error.log;
  keepalive_timeout    600;
  <% ( @overrides ? ( @overrides['server'] || [] ) : [] ).each do |override| %>
  <%= override.to_s.gsub(';','') %>;
  <% end %>
        
  <% if @rewritehttp %>
  if ($http_host = "<%=@site%>") {
    rewrite ^/(.*)$ https://<%=@site%>/$1;
  }
  <% end %>

#+++++++++++++++
#++ Redirects ++
#+++++++++++++++

	location / {
    <%if @allows && @allows.length > 0 %>
      <% @allows.each do |allow|%>
    allow <%=allow%>;  
      <%end%>
    deny all;
    <%end%>
    proxy_pass http://<%=@cluster_ip%>:<%=@cluster_port%>; # my existing apache instance
    proxy_set_header Host $host;
    proxy_set_header x-forwarded-for $remote_addr;
    <% ( @overrides ? ( @overrides['location'] || [] ) : [] ).each do |override| %>
    <%= override.to_s.gsub(';','') %>;
    <% end %>
  }
}
